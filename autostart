#!/bin/bash
sudo apt update -y && sudo apt upgrade -y
sudo apt install -y htop net-tools openssh-server sshfs proftpd espeak geany git python3-dev python3-venv python3-pip apache2 php mysql-server mysql-common mysql-client phpmyadmin mplayer
sudo apt autoclean
sudo apt autoremove
sudo apt dist-upgrade
sudo service apache2 restart
sudo service mysql restart
pip3 install --user mps-youtube youtube-dl
sudo cp bin/gad			/usr/bin
sudo cp bin/ziz			/usr/bin
sudo cp bin/gpio/dht11		/usr/bin
sudo cp bin/gpio/lcd		/usr/bin
sudo cp bin/pogoda		/usr/bin
sudo cp bin/gpio/domofon	/usr/bin
sudo cp bin/domobot		/usr/bin

